<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradint_home"
    tools:context=".ForgetPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:text="Recovery Account"
        android:textColor="@color/white"
        android:id="@+id/recoveryAccount"
        android:textSize="@dimen/_26sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/recoveryAccount"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_200sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:drawableStart="@drawable/email_icon"
            android:paddingStart="@dimen/_5sdp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_17sdp"
            android:drawablePadding="@dimen/_3sdp"
            android:hint="Enter your email"
            android:background="@drawable/edit_text_radius2"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/radius2"
            android:text="@string/sign_up"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_80sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:id="@+id/SignUpBtn"
            android:textColor="#fff"
            android:drawableEnd="@drawable/arrow1"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>