<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_330sdp"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ellipse1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_marginStart="@dimen/_120sdp"
                    android:src="@drawable/ellipse2"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:src="@drawable/profile_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Sign Up"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout1"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout"
                android:layout_marginTop="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:inputType="text"
                    android:id="@+id/name_sign_up"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/user_icon"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="@dimen/_17sdp"
                    android:drawablePadding="@dimen/_3sdp"
                    android:hint="@string/enter_the_name"
                    android:background="@drawable/radius_edittext"
                    />
                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email_sign_up"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/email_icon"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="@dimen/_17sdp"
                    android:drawablePadding="@dimen/_3sdp"
                    android:hint="Enter your email"
                    android:background="@drawable/radius_edittext"
                    />
                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:layout_gravity="center"
                    android:id="@+id/password_sign_up"
                    android:drawableStart="@drawable/password_icon"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="@dimen/_17sdp"
                    android:drawablePadding="@dimen/_3sdp"
                    android:hint="@string/enter_your_password"
                    android:background="@drawable/radius_edittext"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/linearlayout1"
                >
                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginStart="@dimen/_120sdp"
                    >
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationView"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/load"
                        />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radius_btn"
                    android:text="@string/sign_up"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/SignUpBtn"
                    android:textColor="#fff"
                    android:drawableEnd="@drawable/arrow1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inknut_antiqua_light"
                    android:textStyle="bold"
                    android:text="Login with Google" />
                <ImageView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/google_icons"
                    android:id="@+id/googleIconBtn"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_30sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have account?? "
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:id="@+id/login"
                        android:textColor="#0037FF"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>